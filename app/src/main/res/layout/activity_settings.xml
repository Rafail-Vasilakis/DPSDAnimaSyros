<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_intro">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Ρυθμίσεις"
            android:textAppearance="@style/some_id"
            android:textSize="30dp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/leftarrowwhite"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="-7dp"/>
        </LinearLayout>
    <!-- Language Selection -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
<ImageView
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:src="@drawable/lang"
    android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επιλογή Γλώσσας"
        android:layout_marginTop="9dp"
        android:textSize="20dp"
        android:textAppearance="@style/some_id"
        android:paddingLeft="20dp"/>

    <Spinner
        android:id="@+id/choose_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:entries="@array/languages"
        android:paddingLeft="20dp"/>
    </LinearLayout>
    <!-- Favorites -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/vectorfav_vector"
            android:paddingLeft="20dp"/>
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Αγαπημένα"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:background="@color/transparent"
        android:textAppearance="@style/some_id"/>

        <Button
            android:id="@+id/button_favorites"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="130dp"
            android:paddingTop="10dp"/>

    </LinearLayout>
    <!-- Account Privacy -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/privacy"
            android:paddingLeft="20dp"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="9dp"
            android:text="Απόρρητο λογαριασμού"
            android:textAppearance="@style/some_id"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/button_privacy"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <!-- Share With -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/share"
            android:paddingLeft="20dp"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:text="Κοινοποίηση"
            android:textAppearance="@style/some_id"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="115dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <!-- Terms and Service -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/terms"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/terms_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:text="Όροι χρήσης"
            android:textAppearance="@style/some_id"
            android:textSize="20dp" />

        <Button
            android:id="@+id/terms_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="115dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <!-- Remove Ads -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/removeads"
            android:paddingLeft="20dp"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="9dp"
            android:text="Διαγραφή διαφημίσεων"
            android:textAppearance="@style/some_id"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/button_remove_ads"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:background="@drawable/rightarrow" />
    </LinearLayout>
    <!-- Help -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/help"
            android:paddingLeft="20dp"/>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Βοήθεια"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:background="@color/transparent"
            android:textAppearance="@style/some_id"/>

        <Button
            android:id="@+id/help_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="90dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <!-- About -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/about"
            android:paddingLeft="20dp"/>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Σχετικά με εμάς"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:background="@color/transparent"
            android:textAppearance="@style/some_id"/>

        <Button
            android:id="@+id/about_us_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rightarrow"
            android:layout_marginLeft="27dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <!-- Add Account -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/add_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Προσθήκη λογαριασμό"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:background="@color/transparent"
            android:textAppearance="@style/some_id"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <!-- Log Out Account -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/button_log_out_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Αποσύνδεση λογαριασμού"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:background="@color/transparent"
            android:textAppearance="@style/some_id"
            android:textColor="@color/red"/>
    </LinearLayout>
    <!-- Log Out All Accounts -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/button_log_out_all_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Αποσύνδεση από όλους τους λογαριασμούς"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:background="@color/transparent"
            android:textAppearance="@style/some_id"
            android:padding="10dp"
            android:textColor="@color/red"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>
</RelativeLayout>
