<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewThemes"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/transparent">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="340dp"
            android:layout_height="136dp"
            android:layout_marginStart="30dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:src="@drawable/firstcategoryphoto" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:text="10:00 Σχολική Προβολή στο Θέατρο Απόλλων"
                android:textAppearance="@style/some_id"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="290dp"
                android:layout_marginTop="86dp"
                android:src="@drawable/info" />

        </FrameLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/add_fav_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="630dp"
        android:src="@drawable/purplestar"
        android:rotation="120" />

</androidx.cardview.widget.CardView>