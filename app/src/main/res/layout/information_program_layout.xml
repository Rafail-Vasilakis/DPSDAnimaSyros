<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">


    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/b2" />

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigation_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="136dp">

                    <ImageView
                        android:id="@+id/imagecategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_image"
                        android:src="@drawable/firstcategoryphoto" />

                    <TextView
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="30dp"
                        android:text="10:00 Σχολική Προβολή στο Θέατρο Απόλλων"
                        android:textAppearance="@style/some_id"
                        android:textColor="@color/black"
                        android:textSize="20dp" />



                </FrameLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi rhoncus eget risus molestie commodo. In dui orci, interdum vitae turpis vel, ornare commodo metus. Cras semper, neque vitae dignissim maximus, magna eros auctor est, eu egestas purus dolor at quam. Nullam molestie tellus eu mauris scelerisque hendrerit. Fusce molestie euismod mauris rutrum finibus. Etiam id erat lacus. Praesent non tincidunt nunc. Maecenas vitae dolor placerat, fermentum sem non, consectetur purus."
                android:textAppearance="@style/some_id"/>
            </ScrollView>


            </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/add_fav_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="616dp"
        android:background="@drawable/purplestar"
        android:rotation="120" />


</RelativeLayout>
